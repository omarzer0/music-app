<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".ui.DisplaySongsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_display_songs_search_bar_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#fff"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/activity_display_songs_ed_search_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/search_text_view_background"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:hint="@string/search_for_songs"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textColorHint="@android:color/tertiary_text_light"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_search"
            app:layout_constraintEnd_toStartOf="@+id/activity_display_songs_img_more_options"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/activity_display_songs_img_more_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:src="@drawable/ic_more_horiz"
            app:layout_constraintBottom_toBottomOf="@+id/activity_display_songs_ed_search_edit_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_display_songs_ed_search_edit_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_display_songs_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_display_songs_search_bar_constraintLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/song_item" />

</androidx.constraintlayout.widget.ConstraintLayout>